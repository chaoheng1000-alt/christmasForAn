---
// 使用图片的圣诞树组件
// 确保 baseUrl 以 / 结尾（除非是根路径）
const baseUrl = import.meta.env.BASE_URL;
const normalizedBase = baseUrl === '/' ? '' : (baseUrl.endsWith('/') ? baseUrl : baseUrl + '/');
const treeImageUrl = `${normalizedBase}assets/tree.jpg`;
---

<div class="christmas-tree-container">
	<img src={treeImageUrl} alt="圣诞树" class="christmas-tree-image" />
</div>

<style>
	.christmas-tree-container {
		position: relative;
		width: 100%;
		height: 100%;
		display: flex;
		justify-content: center;
		align-items: center;
	}

	.christmas-tree-image {
		width: 100%;
		max-width: 500px;
		height: auto;
		max-height: 80vh;
		object-fit: contain;
		filter: drop-shadow(0 15px 40px rgba(0, 0, 0, 0.6)) 
		        drop-shadow(0 0 30px rgba(255, 215, 0, 0.3));
		animation: tree-glow 3s ease-in-out infinite;
		transition: transform 0.3s ease;
	}

	.christmas-tree-image:hover {
		transform: scale(1.02);
	}

	@keyframes tree-glow {
		0%, 100% {
			filter: drop-shadow(0 15px 40px rgba(0, 0, 0, 0.6)) 
			        drop-shadow(0 0 30px rgba(255, 215, 0, 0.3));
		}
		50% {
			filter: drop-shadow(0 15px 40px rgba(0, 0, 0, 0.6)) 
			        drop-shadow(0 0 50px rgba(255, 215, 0, 0.5));
		}
	}

	/* 响应式设计 */
	@media (max-width: 768px) {
		.christmas-tree-image {
			max-width: 90%;
			max-height: 70vh;
		}
	}
</style>
