</div>

<style>
	.christmas-tree-container {
		position: relative;
		width: 100%;
		height: 100%;
		display: flex;
		justify-content: center;
		align-items: center;
	}

	.christmas-tree-svg {
		width: 100%;
		max-width: 400px;
		height: auto;
		max-height: 700px;
		filter: drop-shadow(0 10px 30px rgba(0, 0, 0, 0.5));
	}

	/* 树干样式 */
	.tree-trunk {
		filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.4));
	}

	/* 树层样式 - 添加手绘纹理效果 */
	.tree-layer {
		filter: drop-shadow(0 6px 12px rgba(0, 0, 0, 0.4));
		opacity: 0.95;
	}

	.layer-1 {
		filter: drop-shadow(0 3px 6px rgba(0, 0, 0, 0.3));
	}

	.layer-2 {
		filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.35));
	}

	.layer-3 {
		filter: drop-shadow(0 5px 10px rgba(0, 0, 0, 0.4));
	}

	.layer-4 {
		filter: drop-shadow(0 6px 12px rgba(0, 0, 0, 0.45));
	}

	.layer-5 {
		filter: drop-shadow(0 8px 16px rgba(0, 0, 0, 0.5));
	}

	/* 星星闪烁动画 */
	.tree-star {
		animation: star-twinkle 2s ease-in-out infinite;
		transform-origin: 200px 170px;
	}

	@keyframes star-twinkle {
		0%, 100% { 
			opacity: 1; 
			transform: translate(200px, 170px) scale(1) rotate(0deg);
			filter: drop-shadow(0 0 15px rgba(255, 215, 0, 0.9));
		}
		50% { 
			opacity: 0.9; 
			transform: translate(200px, 170px) scale(1.15) rotate(5deg);
			filter: drop-shadow(0 0 25px rgba(255, 215, 0, 1));
		}
	}

	/* 彩灯闪烁动画 */
	.light {
		filter: drop-shadow(0 0 8px currentColor) drop-shadow(0 0 15px currentColor);
		animation: light-flicker 1.5s ease-in-out infinite;
		opacity: 0.9;
	}

	/* 不同颜色的灯光 */
	.light-1, .light-4, .light-7, .light-9, .light-12, .light-14, .light-16, .light-20, .light-23 { 
		color: #ff6b6b;
		fill: #ff6b6b;
	}
	
	.light-2, .light-8, .light-13, .light-19, .light-24 { 
		color: #4ecdc4;
		fill: #4ecdc4;
	}
	
	.light-3, .light-6, .light-10, .light-15, .light-21, .light-25 { 
		color: #ffe66d;
		fill: #ffe66d;
	}
	
	.light-5, .light-11, .light-17, .light-22 { 
		color: #95e1d3;
		fill: #95e1d3;
	}

	/* 每个灯光不同的闪烁延迟 */
	.light-1 { animation-delay: 0s; }
	.light-2 { animation-delay: 0.1s; }
	.light-3 { animation-delay: 0.2s; }
	.light-4 { animation-delay: 0.3s; }
	.light-5 { animation-delay: 0.4s; }
	.light-6 { animation-delay: 0.5s; }
	.light-7 { animation-delay: 0.6s; }
	.light-8 { animation-delay: 0.7s; }
	.light-9 { animation-delay: 0.8s; }
	.light-10 { animation-delay: 0.9s; }
	.light-11 { animation-delay: 1s; }
	.light-12 { animation-delay: 1.1s; }
	.light-13 { animation-delay: 0.2s; }
	.light-14 { animation-delay: 0.4s; }
	.light-15 { animation-delay: 0.6s; }
	.light-16 { animation-delay: 0.8s; }
	.light-17 { animation-delay: 1s; }
	.light-18 { animation-delay: 1.2s; }
	.light-19 { animation-delay: 0.3s; }
	.light-20 { animation-delay: 0.5s; }
	.light-21 { animation-delay: 0.7s; }
	.light-22 { animation-delay: 0.9s; }
	.light-23 { animation-delay: 1.1s; }
	.light-24 { animation-delay: 0.1s; }
	.light-25 { animation-delay: 0.6s; }

	@keyframes light-flicker {
		0%, 100% { 
			opacity: 1; 
			transform: scale(1);
			filter: drop-shadow(0 0 8px currentColor) drop-shadow(0 0 15px currentColor);
		}
		25% { 
			opacity: 0.7; 
			transform: scale(0.85);
			filter: drop-shadow(0 0 5px currentColor) drop-shadow(0 0 10px currentColor);
		}
		50% { 
			opacity: 0.9; 
			transform: scale(1.1);
			filter: drop-shadow(0 0 12px currentColor) drop-shadow(0 0 20px currentColor);
		}
		75% { 
			opacity: 0.8; 
			transform: scale(0.9);
			filter: drop-shadow(0 0 6px currentColor) drop-shadow(0 0 12px currentColor);
		}
	}

	/* 响应式设计 */
	@media (max-width: 768px) {
		.christmas-tree-svg {
			max-width: 300px;
			max-height: 525px;
		}
	}
</style>
